%div#inline_pledge_form
  %div#pledge_button
    - remote_form_for Pledge.new(:tip => news_item, :amount => 25), :update => "#inline_pledge_form" do |f|
      = f.hidden_field :amount
      = f.hidden_field :tip_id
      = image_submit_tag "pledge_25.png"
  %div#pledge_custom{:style => "display:none"}
    - remote_form_for Pledge.new(:tip => news_item), :update => "#inline_pledge_form" do |f|
      = f.text_field :amount
      = f.hidden_field :tip_id
      = f.submit "Pledge"
  = link_to_function "OR PLEDGE ANOTHER AMOUNT", 'toggle_divs("#pledge_button", "#pledge_custom")'

