<div class="spotus_widget">
   <div class="spotus_widget_header">
      <%= link_to image_tag("/images/new_design/spotus-logo-small.png"), root_url %>
      <%= link_to "about", root_url + "pages/about", :class => "spotus_about_us" %>
   </div>
  <div class="spotus_pitch">
      <% apply_fragment ['widget_tmp_', @pitch] do %>
      	<% if @pitch.story && @pitch.story.published? %>
      	<div class="spotus_spacer">
      		<h3 class="spotus_pitch_title"><%= link_to h(@pitch.story.headline), @pitch.story %></h3>
      		  <span class="spotus_dateline">Posted<%= @pitch.story.created_at.to_s(:long_date)%>
      		    by <%= link_to h(@pitch.story.user.full_name), profile_path(@pitch.story.user)%> in <%= @pitch.story.network.name%></span>
      		  <p class="short_description alt-spotus">
      		    <%= truncate_words(@pitch.story.extended_description, 30) if @pitch.story.extended_description%>
      		    <%= link_to 'Read More &raquo;', @pitch.story%>
      		  </p>
      		</div>
      	<% else %>
      	   <h4 class="spotus_help_fund"><%= link_to "help fund this news story!", @pitch %></h4>
         	<div class="spotus_spacer">
         	   <div class="spotus_pitch_info">
      		   	<%= link_to image_tag(@pitch.featured_image.url(:medium), :class => "spotus_pitch_image"), @pitch %>
         			<h3 class="spotus_pitch_title"><%= link_to h(@pitch.headline), pitch_url(@pitch) %></h3>
         			<div class="spotus_dateline">Posted <%= @pitch.created_at.to_s(:long_date)%></div>
         			<div class="spotus_author">by <%= link_to h(@pitch.user.full_name), profile_path(@pitch.user)%> in <%= @pitch.network.name%></div>
		            <br clear="all"/>
		         </div>
      			<% if @pitch.fully_funded? %>
      				<%= image_tag('fully_funded.png', :alt => 'This News Item is Fully Funded!')%>
      			<% else %>
      				<div class="spotus_progress">
      				   <div class="spotus_funding">funding so far</div>
      					<%= render :partial => "shared/progress_bar", :locals => {:pitch => @pitch}%>
      					<div class="spotus_contribute">
      					   <%= link_to image_tag("/images/new_design/fund-widget.png"), @pitch %>
      					</div>
      					<%#= link_to image_submit_tag("donate_default.png", :alt => "Donate", :title => "Donate"), pitch_url(@pitch)%>
      				</div>
      			<% end %>
      		</div>
      	<% end %>
      <% end %>
   </div>
   <div class="spotus_footer">
      <div class="spotus_slogan">
         <span class="spotus_pink">Community</span>
         <span class="spotus_moss-green">Funded Reporting</span>
      </div>
   </div>
</div>