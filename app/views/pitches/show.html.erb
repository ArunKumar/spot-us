<%= render :partial => "pitch_head" %>
<% @title = "Spot.us - Pitch: #{h @pitch.headline}" %>
<ul class="tabs">
	<li <%if @filter=='summary'%>class="current"<%end%>><a href="/unfunded">Summary</a></li>
	<li <%if @filter=='story'%>class="current" style="display:none;"<%end%>><a href="/published">Story</a></li>
	<li <%if @filter=='updates'%>class="current"<%end%>><a href="/updates">Updates</a></li>
	<li <%if @filter=='discussion'%>class="current"<%end%>><a href="/unfunded">Discussion</a></li>
	<li <%if @filter=='assignments'%>class="current"<%end%>><a href="/published">Assignments</a></li>
	<li <%if @filter=='donors'%>class="current"<%end%>><a href="/updates">Donors</a></li>
	<li <%if @filter=='details'%>class="current"<%end%>><a href="/updates">Details</a></li>
</ul>

<% if @subscriber && @subscriber.errors.any? %>
<div class="error">
	<%= error_messages_for :subscriber %>
</div>
<% end %>

<div class="pitchContainer">
	<div class="summaryContent">
		<% apply_fragment ['pitch_detail_description_', @pitch] do %>
		<% if !@pitch.video_embed.blank? %>
		<div class="video_container">
			<%= transform_embed_code(@pitch.video_embed, 520, 320) %>
		</div>
		<% end %>
		<div class="description_tab tab_panel clearfix">
			<%= image_tag(@pitch.featured_image.url(:medium), :class => "featured_image") %>
			<div class="short_description">
				<%= transform_embed_code(@pitch.short_description, 520, 320) %>
			</div>
			<% unless @pitch.extended_description.blank? %>
				<div class="extended_description">
					<h4>How will it help?</h4>
					<%= @pitch.extended_description %>
				</div>
			<% end %>
		</div>
		<%end%>
	</div>
	<div class="summarySidebar">
		<div class="fundBox">
			<div class="progress_bar">
					<% if @pitch.fully_funded? %>
					<%= static_progress_bar("pitch", 1) %>
					<% else %>
					<%= static_progress_bar("pitch", @pitch.current_funding_in_percentage) %>
					<% end %>
				<%= due_date_in_words(@pitch.expiration_date) %>
			</div>
			<ul>
				<li class="creditsButton"><a href="#">Free Credits</a></li>
				<li class="fundButton"><a href="#">Fund It</a></li>
			</ul>
		</div>
		<%if @pitch.supporters.any?%>
			<div class="donorsBox">
				<h3>Individual Donors</h3>
				<ul class="total">
					<li><h5><%=number_to_currency @pitch.total_amount_donated%></h5></li>
					<li><span>(<%=@pitch.supporters.length%> supporters)</span></li>
				</ul>
				<ul class="supporters">
					<%nrs = @pitch.supporters.length>6 ? 6 : @pitch.supporters.length%>
					<%nrs.times do |ind|%>
						<%supporter = @pitch.supporters[ind]%>
						<li><%=link_to image_tag(supporter.photo.url(:thumb), {:alt => supporter.full_name}), profile_path(supporter)%></li>
					<%end%>
					<%unless nrs<6%>
						<span><a href="#">and <%=@pitch.supporters.length-nrs%> others...</a></span>
					<%end%>
				</ul>
			</div>
		<%end%>
		<%if @pitch.donating_groups.any?%>
			<div class="donorsBox">
				<h3>Organizational Support</h3>
				<ul class="total">
					<li><h5><%=number_to_currency @pitch.total_amount_donated%></h5></li>
					<li><span>(<%=@pitch.donating_groups.length%> supporters)</span></li>
				</ul>
				<ul class="supporters">
					<%nrs = @pitch.donating_groups.length>6 ? 6 : @pitch.donating_groups.length%>
					<%nrs.times do |ind|%>
						<%supporter = @pitch.supporters[ind]%>
						<li><%=link_to image_tag(supporter.photo.url(:thumb), {:alt => supporter.full_name}), profile_path(supporter)%></li>
					<%end%>
					<%unless nrs<6%>
						<span><a href="#">and <%=@pitch.donating_groups.length-nrs%> others...</a></span>
					<%end%>
				</ul>
			</div>
		<%end%>
		<%if @pitch.supporting_organizations.any? || @pitch.donations_and_credits.from_organizations.any?%>	
			<%supporters = []%>
			<%supporters.concat(@pitch.supporting_organizations) if @pitch.supporting_organizations.any?%>
			<%supporters.concat(@pitch.donations_and_credits.from_organizations) if @pitch.donations_and_credits.from_organizations.any?%>
			<div class="donorsBox">
				<h3>Group Supporters</h3>
				<ul class="total">
					<li><h5><%=number_to_currency @pitch.donations_and_credits.from_organizations.map{ |d| d.amount }.sum%></h5></li>
					<li><span>(<%=supporters.length%> supporters)</span></li>
				</ul>
				<ul class="supporters">
						<li><a href="#"><img src="/images/default_avatar.png?1294965892"></a></li>
						<li><a href="#"><img src="/images/default_avatar.png?1294965892"></a></li>
						<li><a href="#"><img src="/images/default_avatar.png?1294965892"></a></li>
						<li><a href="#"><img src="/images/default_avatar.png?1294965892"></a></li>
						<li><a href="#"><img src="/images/default_avatar.png?1294965892"></a></li>
						<li><a href="#"><img src="/images/default_avatar.png?1294965892"></a></li>
						<span><a href="#">and 27 others...</a></span>
				</ul>
			</div>
		<%end%>
		<%unless Donation.cca_supporters(@pitch.id).all.empty?%>
			<div class="donorsBox">
				<%donations = via_cca_supporters_for(@pitch)%>
				<h3>Community-Centered Advertising</h3>
				<ul class="total">
					<li><h5><%=number_to_currency Donation.cca_supporters(@pitch.id).map{ |obj| obj.cca_total_amount.to_f }.sum%></h5></li>
					<li><span>(<%=donations.length%> supporters)</span></li>
				</ul>
				<ul class="supporters">
					<%nrs = donations.length>6 ? 6 : donations.length%>
					<%nrs.times do |ind|%>
						<%cca = donations[ind].cca%>
						<%if cca && cca.user%>
							<li><%=link_to image_tag(cca.user.photo.url(:thumb), {:alt => cca.user.full_name}), cca_path(cca)%></li>
						<%end%>
					<%end%>
					<%unless nrs<6%>
						<span><a href="#">and <%=donations-nrs%> others...</a></span>
					<%end%>
				</ul>
			</div>
		<%end%>
		<ul class="getInvolved">
			<h3>Get Involved</h3>
			<li><h4>Donate Talent</h4></li>
			<li>Can you take photos, help report, sift through documents and records, or contribute to reporting in some other way? If so, <a href="#">get in touch with the authors</a>.</li>
		</ul>
	</div>
</div>





