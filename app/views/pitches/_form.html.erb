<% content_for :head do %>
<script>
jQuery(document).ready(function($){
	$("#toggleDivs").click(function(){
		$('div[id*=toggle_div]').slideToggle(600);
		return false;
	});
});
</script>
<% end %>
<% form_for(@pitch, :html => { :multipart => true }) do |f| %>
<div class="formContainer">
	<div class="formBody">
		<div class="row top">
			<h2 class="top">Basics</h2>
			<%= f.label     :headline, "<a href='#' rel='nofollow' id='hoverAnchorHeadline'>Headline</a><span class='small required'>Required</span>" %>
			<%= f.text_area :headline, :rows => 2, :value => @pitch && @pitch.headline ? @pitch.headline : TEXT[:headline], :onclick => "clear_text('headline', '#{TEXT[:headline]}')", 
			:class => @pitch && @pitch.headline ? "" : "gray_text", :id => "headline" %>
		</div>
		<div class="row">
			<%= f.label :short_description, "<a href='#' rel='nofollow' id='hoverAnchorShortDescription'>Short Description</a><span class='small required'>Required</span>" %>
			<%= ckeditor_textarea("pitch", "short_description", :toolbar => 'Medium', :width => '683px', :height => '200px') %>
		</div>
		<% if APP_CONFIG[:has_networks] || (current_user && current_user.admin?)%>
		<div class="row">
			<%= render :partial => 'shared/network', :locals => {:f => f, :instance => @pitch} %>
		</div>
		<% end %>
		<div class="row">
			<label>Topics</label>
			<div class="sites">
				<%= topic_check_boxes(@pitch) %>
			</div>    
		</div>
		<h2>Qualifications</h2>
		<div class="row">
			<%= f.label :skills, "<a href='#' rel='nofollow' id='hoverAnchorQualifications'>Reporter Qualifications</a>" %>
			<%= ckeditor_textarea("pitch", "skills", :toolbar => 'Medium', :width => '683px', :height => '200px') %>
		</div>
		<h2>Costs &amp; Deliverables</h2>
		<div class="row">
			<label>Requested Amount<br/>
				<span class="small required">
					<a href="" id="help_pricing-for-stories">Suggested pricings for work!</a>
				</span>
			</label>
			<%= f.text_field :requested_amount, :maxlength => 15, :size => 15 %>
		</div>
		<div class="row">
			<%= f.label :delivery_description, "<a href='#' rel='nofollow' id='hoverAnchorDelivery'>Deliverables</a>" %>
			<div class="sites">
				Text
				<%= f.check_box :deliver_text %>
				Audio
				<%= f.check_box :deliver_audio %>
				Video
				<%= f.check_box :deliver_video %>
				Photos
				<%= f.check_box :deliver_photo %><br/>
			</div>
		</div>
		<div class="row">
			<label><br /></label>
			<%#= f.text_area :delivery_description, :style => "width:683px;height:200px" %>
			<div class="rte">
				<%= ckeditor_textarea("pitch", "delivery_description", :toolbar => 'Medium', :width => '683px', :height => '150px') %>
			</div>
		</div>
		<h2>Media</h2>
		<div class="row add_media">
			<label><a href='#' rel='nofollow' id='hoverAnchorUploadMedia'>Add Image</a>
				<span class="small required">
					Required
				</span>       
			</label>
			<%= f.file_field :featured_image %><br/>
			<span class="small required"> JPEG, PNG and GIF's less than 5 MB.</span>
		</div>
		<div class="row">
			<%= f.label :video_embed, "<a href='#' rel='nofollow' id='hoverAnchorVideoEmbed'>Embed a Video</a>", :class => "small" %>
			<%= f.text_area :video_embed, :rows => 4 %>
		</div>
		<div class="row">
			<%= f.label :expiration_date, "Editorial Deadline<span class='small required'>Required</span>" %>
			<%= f.date_select :expiration_date, :include_blank => true, :default => nil, :start_year => Time.now.year %>
		</div>

		<!-- START OPTIONAL FIELDS -->
		<h2>Optional</h2>
		<div class="row optional">
			<span id='toggleDivs'>Toggle here to hide/show the optional fields</span>  
		</div>
		<div class="row" id="toggle_div_how_will_it_help">
			<%= f.label :extended_description, "How can your reporting help?" %>
			<%= ckeditor_textarea("pitch", "extended_description", :toolbar => 'Spotus', :width => '683px', :height => '200px') %>
		</div>
		<div class="row" id="toggle_div_disclosure">
			<%= f.label :disclosure, "<a href='#' rel='nofollow' id='hoverAnchorDisclosure'>Disclosure</a>" %>
			<%= ckeditor_textarea("pitch", "disclosure", :toolbar => 'Medium', :width => '683px', :height => '200px') %>
		</div>
		<div class="row" id="toggle_div_caption">
			<%= f.label :featured_image_caption, "<a href='#' rel='nofollow' id='hoverAnchorImageCaption'>Image Caption</a>" %>
			<%= f.text_area :featured_image_caption, :rows => 2 %>
		</div>
		<div class="row" id="toggle_div_keywords">
			<%= f.label :keyword, "<a href='#' rel='nofollow' id='hoverAnchorKeywords'>Keywords</a>" %>
			<%= f.text_area :keywords, :rows => 3 %>
		</div>
		<!-- END OPTIONAL FIELDS -->

		<div class="row contract">
			<%= f.check_box :contract_agreement %> &nbsp;
			<%= f.label :contract_agreement, %Q(I agree with the #{link_to "Reporter's Contract", page_path('reporter_contract', {:only_path=>false}), {:class => "quieter", :rel=>"facebox"}} (independent contractor agreement, please read).) %>
		</div>
		<div class="row">
			<% if @pitch.new_record? %>
			<%= get_button("Create a Pitch") %>
			<% else %>
			<%= image_submit_tag image_path('save.png') %>
			<%= link_to image_tag('cancel.png', :alt => 'Cancel'), root_url %>
			<% end %>
		</div>
		<% end %>
	</div>
</div>

<% content_for :bottom do %>
<!-- START - hover list of helpers -->
<ul class='hoverContainer headline' id='hoverContainerHeadline' style="display:none;">
	<li>In a few words, tell us what your pitch is about</li>
</ul>
<ul class='hoverContainer shortDescription' id='hoverContainerShortDescription' style="display:none;">
	<li>Why would someone care? What are the details?</li>
	<li>Sell the story!</li>
</ul>
<ul class='hoverContainer qualifications' id='hoverContainerQualifications' style="display:none;">
	<li><h3>Do you have the skills/access to report this story?</h3></li>
	<li>Tell us who you are and why we should support you.</li>
</ul>
<ul class='hoverContainer video' id='hoverContainerUploadMedia' style="display:none;">
	<li>Please upload a featured image for your post.</li>
</ul>
<ul class='hoverContainer video' id='hoverContainerVideoEmbed' style="display:none;">
	<li>NOT REQUIRED</li>
	<li>Paste your third-party embedded code here. We can only take Vimeo or YouTube at this time.</li>
</ul>
<ul class='hoverContainer delivery' id='hoverContainerDelivery' style="display:none;">
	<li><h2>What will be delivered?</h2></li>
	<li>Provide some details on what you will produce. Justify your pricing.</li>
</ul>
<ul class='hoverContainer disclosure' id='hoverContainerDisclosure' style="display:none;">
	<li>Here you may disclose any relationships or similar.</li>
</ul>
<ul class='hoverContainer imageCaption' id='hoverContainerImageCaption' style="display:none;">
	<li>Add a featured image caption with 200 character maximum.</li>
</ul>
<ul class='hoverContainer keywords' id='hoverContainerKeywords' style="display:none;">
	<li>Please include keywords, or tags. They should be separated by commas. For example: "car, automobile, suvs."</li>
</ul>
<!-- END - hover list of helpers -->
<% end %>