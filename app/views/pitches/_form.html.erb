<% content_for :head do %>
  	<script>

    jQuery(document).ready(function($){
		$("#toggleDivs").click(function(){
			$('div[id*=toggle_div]').slideToggle(600);
			
			return false;
		});
    });
	
	</script>
<% end %>
<% form_for(@pitch, :html => { :multipart => true }) do |f| %>
    <div class="row">
        <%= f.label     :headline, "Your Pitch's Headline <br /><span class='small quieter'>Required</span>" %>
        <%= f.text_area :headline, :rows => 2 %>
        <%#= text_field_tag 'pitch[blog_url]', '', :class => 'highlight_required', :id => 'pitch_blog_url' %>
    </div>
    <div class="row">
      <%= f.label :short_description, "Why would someone care? Sell the story! <br /><span class='small quieter'>Required <br /><br /> This is your chance to explain what the pitch is about. Think of it like a nut graph.</span>" %>
      <%= fckeditor_textarea("pitch", "short_description", :toolbarSet => 'Spotus', :width => '683px', :height => '200px') %>
    </div>
    <div class="row">
       <%= render :partial => 'shared/network', :locals => {:f => f, :instance => @pitch} %>
    </div>
    <div class="row clearfix">
       <label>Topics</label>
       <div class="pitch_topics">
          <%= topic_check_boxes(@pitch) %>
       </div>    
    </div>
    <div class="row">
      <%= f.label :skills, "Do you have the skills and access to report on this story? <br /><span class='small quieter'>Make a case for why your expertise as a journalist is worth the money you are requesting.</span>" %>
      <%= f.text_area :skills, :rows => 3 %>
    </div>
    <div class="row">
       <label>Requested Amount<br/>
          <span class="small quieter">
             <%= link_to "Suggested pricings for work", page_path("reporter_agreement") %>
          </span>
      </label>
      <%= f.text_field :requested_amount, :maxlength => 15, :size => 15 %>
    </div>
    <div class="row">
      <%= f.label :delivery_description, "What will be delivered?<br />" %>
      <div class="small strong deliver">
          Text
          <%= f.check_box :deliver_text %>
          Audio
          <%= f.check_box :deliver_audio %>
          Video
          <%= f.check_box :deliver_video %>
          Photos
          <%= f.check_box :deliver_photo %><br/>
      </div>
    </div>
    <div class="row">
       <label>How long will it take you? <br /> How many hours of work will this take?<br /><span class='small quieter'>Explain in detail what you will produce to justify your pricing</span></label>
       <%#= f.text_area :delivery_description, :style => "width:683px;height:200px" %>
		<%= fckeditor_textarea("pitch", "delivery_description", :toolbarSet => 'Spotus', :width => '683px', :height => '150px') %>
    </div>
    <div class="row add_media">
      <label>Add Media<br/>
         <span class="small">
            Required: Upload A Featured Image
         </span>       
      </label>
      <%= f.file_field :featured_image %><br/>
      <span class="small quieter"> JPEG, PNG and GIF's less than 5 MB.</span>
    </div>
    <!-- <div class="row">
      <%#= f.label :featured_image_caption, "Required: Add a Featured Image Caption" + "<br/><span class='small quieter'>200 Characters Max</span>", :class => "small" %>
      <%#= f.text_area :featured_image_caption, :rows => 2 %>
    </div> -->
    <div class="row">
      <%= f.label :video_embed, "Embed a Video" + "<br/><span class='quieter small'>Paste your third-party embeded code here. <br/> We can only take Vimeo or YouTube at this time.</span>", :class => "small" %>
      <%= f.text_area :video_embed, :rows => 4 %>
   </div>
    <div class="row">
      <%= f.label :expiration_date, "Expiration Date <br /><span class='small quieter'>Required</span>" %>
      <%= f.date_select :expiration_date, :include_blank => true, :default => nil, :start_year => Time.now.year %>
   </div>
	<div class="row optional">
		<label id='toggleDivs'>Optional &raquo;<br/>
	         <span class="small">
	            Toggle here to see the optional fields
	         </span>       
	     </label>
	</div>
    <div class="row" id="toggle_div_how_will_it_help" style="display:none;">
      <%= f.label :extended_description, "How can your reporting help?" %>
      <%= fckeditor_textarea("pitch", "extended_description", :toolbarSet => 'Spotus', :width => '683px', :height => '200px') %>
    </div>
	<div class="row" id="toggle_div_disclosure" style="display:none;">
      <%= f.label :disclosure, "Disclosure<br /><span class='small quieter'>Here you may disclose any relationships or similar</span>" %>
      <%= fckeditor_textarea("pitch", "disclosure", :toolbarSet => 'Spotus', :width => '683px', :height => '200px') %>
    </div>
	<div class="row" id="toggle_div_caption" style="display:none;">
		<%= f.label :featured_image_caption, "Required: Add a Featured Image Caption" + "<br/><span class='small quieter'>200 Characters Max</span>", :class => "small" %>
		<%= f.text_area :featured_image_caption, :rows => 2 %>
    </div>
	<div class="row" id="toggle_div_keywords" style="display:none;">
       <%= f.label :keyword, "Keywords <br /><span class='small quieter'>Optional.  Keywords, or tags, should be separate by commas, for example: &quot;car, automobile, SUVs.&quot;</span>" %>
       <%= f.text_area :keywords, :rows => 3 %>
    </div>

	<div class="row contract">
      <%= f.check_box :contract_agreement %> &nbsp;
      <%= f.label :contract_agreement, %Q(I agree with the #{link_to "Reporter's Contract", page_path('reporter_contract'), :class => "quieter"} (independent contractor agreement, please read).) %>
   </div>
   <div class="row">
      <label> </label>
       <% if @pitch.new_record? %>
          <%= image_submit_tag image_path('create_a_pitch.png'), :alt => 'Create a pitch' %>
       <% else %>
         <%= image_submit_tag image_path('save.png') %>
         <%= link_to image_tag('cancel.png', :alt => 'Cancel'), root_url %>
       <% end %>
   </div>
<% end %>

