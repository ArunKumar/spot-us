<% apply_fragment ['post_', p] do %>
	<li>
		<%=image_tag p.blog_image_display(:medium), {:alt => h(p.title)}%>
		<h3><%=link_to p.title[0..30], pitch_post_path(p.pitch, p)%></h3>
		<div><%=pitch_date(p.created_at)%> by <%=link_to p.user, profile_path(p.user)%></div>
		<div>Posted under Pitch <%= link_to p.pitch.headline, pitch_url(p.pitch)%></div>
	</li>
<%end%>