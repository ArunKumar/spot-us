<% apply_fragment ['cca_', cca, current_user] do %>
	<li>
		<%=image_tag cca.user.photo(:medium), {:alt => h(cca.title)}%>
		<h3><%=link_to cca.title[0..30], cca_path(cca)%></h3>
		<div><%=pitch_date(cca.created_at)%> by <%=link_to cca.user, profile_path(cca.user)%></div>
		<div><%= link_to "Earn Credits", cca_path(cca), :title => '', :alt => "Earn credits to donate if you're short on cash", :class => "creditsButton"  unless current_user && cca.survey_completed?(current_user)%></div>
	</li>
<%end%>