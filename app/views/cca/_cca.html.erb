<% apply_fragment ['cca_list_', cca, current_user] do %>
	<li>
		<%=image_tag cca.user.photo(:medium), {:alt => h(cca.title)}%>
		<h3><%=link_to cca.title[0..30], cca_path(cca)%></h3>
		<div><%=pitch_date(cca.created_at)%> by <%=link_to cca.user, profile_path(cca.user)%></div>
		<ul class='donateButtons'>
			<li>
				<%= link_to "Earn Credits", cca_path(cca), :title => '', :alt => "Earn credits to donate if you're short on cash"  unless current_user && cca.survey_completed?(current_user)%>
			</li>
		</ul>
	</li>
<%end%>