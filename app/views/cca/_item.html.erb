
<div id="tabContainer" class="cca">
	<div class="tab_panel">
		<h2 class="headline">Survey Questions</h2>
		<% form_tag "/cca/submit_answers" do %>
  		Fill out the survey below. Once complete you can use your credits to fund the story of your choice.<br/>
      <span class="deep-red small">* Required</span><br/><br/>
  		<%= hidden_field_tag "cca_id", @cca.id %>
  		<% @cca.cca_questions.each_with_index do |question, index| %>
  		  <%= survey_section(question, index) %>
        <h5><%= question.question %> <%= is_required(question.required) %></h5>
        <%= "<div class='description'>#{question.description}</div>" if !question.description.blank? %>
        <%= survey_element(question, current_user, true) %><br/>
      <% end %>
      <%= end_survey_sections %>
      <br/>
      <hr>
      <hr>
      <h5>I'd like to sponsor a survey like this one.</h5>
      <input name="sponsor_interest" value="yes" type="checkbox" /> Sign me up! <span class="small">(Spot.Us will email you with details)</span><br/><br/>
      <h5>Terms of Service. <span class="deep-red">*</span></h5> 
      <input name="tos" value="yes" type="checkbox" /> I understand that my survey responses may be displayed on the site <em>but my identity will remain anonymous</em>.<br/><br/>
      <%= image_submit_tag image_path('submit.png') %>
    <% end %>
	</div>
</div>