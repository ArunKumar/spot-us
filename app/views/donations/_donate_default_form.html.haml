- form_for Donation.new(:pitch => news_item, :amount => Donation::DEFAULT_AMOUNT), :url => myspot_donations_path, :html => {:id => "new_donation_#{news_item.id}", :class => "donate"} do |f|
  = f.hidden_field :amount, :id => "donation_default_amount"
  = f.hidden_field :pitch_id
  = image_submit_tag "/images/new_design/fund.png", :alt => "Donate #{Donation::DEFAULT_AMOUNT}", :title => "Donate #{Donation::DEFAULT_AMOUNT}"
