%ul.user-header-nav
  - if current_user
    %li.no-pipe
      Hello,
      == #{link_to "Chris Amico", user_url}.
    %li.no-pipe
      You need
      = link_to number_to_currency("50"), "#"
      in credit to fund your donations.
    %li
      = link_to "Purchase &raquo;", "#"
    %li
      = link_to "My Spot", "#"
    %li.no-pipe
      = link_to "Logout", logout_url
  - else
    %li
      = link_to "Register", signup_url
    %li.no-pipe
      = link_to "Login", login_url

.slogan
  %span.pink Community 
  %span.moss-green Funded Reporting
.clear

