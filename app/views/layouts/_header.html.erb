<div class="container">
	
	<div class="logo">
		<p>
			<a href="/" class="logo-link" title="Spot.us - Community Funded Reporting">
				<span class="hide">Spot.us - Community Powered Reporting</span>
				<%if @current_network && @current_network.name=="la"%>
					<br /><img src="/images/new_design/usc.png" />
				<%end%>
			</a>
		</p>
	</div>
	
	<ul id="main-nav">
		<li class="start_story">
			<%= facebox_login_link_to image_tag("/images/new_design/start-a-story.jpg", :width=>"111", :height=>"98", :alt=>"start"), new_pitch_path %>
		</li>
		<li class="fund_story">
			<%= link_to image_tag("/images/new_design/fund-a-story.jpg", :width=>"111", :height=>"98", :alt=>"fund"), "/stories/unfunded", :title=>"Find a Pitch to Fund" %>
		</li>
		<li class="read_story">
