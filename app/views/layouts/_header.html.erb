		</li>
		<%if @cca_header%>
			<li class="start_story">
				<%= link_to image_tag("/images/new_design/earn_credits.jpg", :width=>"111", :height=>"98", :alt=>"Earn credits"),  cca_path(@cca_header)%>
			</li>
		<%end%>
	</ul>
	
	<div class="howtouse">
		
		<%=render :partial=>"layouts/howto", :locals=>{:link=>'<a href="/pages/about" title="About Spot.Us">About Spot.Us</a>'}%>
		
