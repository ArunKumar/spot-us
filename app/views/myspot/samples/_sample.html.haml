-div_for sample do 
  - if !sample.url.blank?
    .work_row
      %span.ss_sprite.ss_newspaper
      %span.title=link_to sample.title, sample.url
  - else
    .work_row
      %span.ss_sprite.ss_newspaper
      %span.title=sample.title
  .description= sample.description
  .float-right
    = link_to_remote content_tag(:span, "Delete", :class => "ss_sprite ss_delete"), :url => [:myspot, :profile, sample], :method => :delete
  %hr
  .clear

