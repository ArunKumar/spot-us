- form_tag password_reset_url do
  .span-6.or_login
    %h3 Reset Password
    .double_content_border
    .row
      %label Your E-mail Address
      %div{:class => password_reset_field_class_name }
        = text_field_tag "email", params[:email], :class=>"text"
    .block-padding
    .clear
    .double_content_border
    .float_right
      %input{:type => "image", :src=>"/images/submit.png"}

