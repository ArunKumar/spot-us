- unless @user.errors.blank?
  - content_for :error do
    = error_messages_for :user

- form_for(@user, :url => user_path) do |f|
  .span-6.register
    %h3 Just Getting Started? <br /><span class='small quieter'> All We Need...
    .double_content_border
    .row
      = f.label :email, "Your E-mail Address"
      = f.text_field :email, :class => "text"
    .row
      = f.label :first_name, "Your First Name"
      = f.text_field :first_name, :class => "text"
    .block-padding
    .row
      = f.label :last_name, "Your Last Name"
      = f.text_field :last_name, :class => "text"
    .block-padding
    %span I am a:
    .row
      .float_left= f.radio_button :type, 'Citizen'
      %label.float_left{:for => 'user_type_citizen'} Concerned Citizen
    .row
      .float_left= f.radio_button :type, 'Reporter'
      %label.float_left{:for => 'user_type_reporter'} Professional Journalist
    .row
      .float_left= f.radio_button :type, 'News Organization'
      %label.float_left{:for => 'user_type_organization'} News Organization
    .block-padding.clear 
    %p We'll email you a password which you can login and change.
    .row
      .float_left= f.check_box :terms_of_service, {}, '1', '0'
      %label.float_left{:for => 'user_terms_of_service'}
        I accept the 
        = link_to 'Terms of Service', page_path('terms')
    .block-padding.clear 

    .double_content_border
    .float_right
      %input{:type => "image", :src=>"../images/register.png"}
