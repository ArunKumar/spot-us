<% content_for :head do %>
	<%= auto_discovery_link_tag(:rss, {:controller => 'news_items', :action => 'index', :format => 'rss', :filter=>@filter}) %>
<% end %>

<% @title = "Spot.us - Fund A Story" %>

<div id="fund_a_story">
	<div id="navigation">
		<%=render :partial=>"shared/filters", :locals=>{
			:title=>"Browse Stories",
			:url_base=>"/stories",
			:filters=>{
				"unfunded"=>"Unfunded",
				"almost-funded"=>"Almost Funded",
				"funded"=>"Funded",
				"published"=>"Published",
				"suggested"=>"Suggested"
			}
		}%>
	   	<% if @channels.any? %>
			<h5>Filter by Channel</h5>
			<ul id="channels" class="filter">
				<% @channels.each do |channel| %>            
					<li<% if channel == @channel %> class="active"<%end%>>
						<%= link_to image_tag(channel.channel_image(:thumb), :title => channel.description), channel_path(channel) %>
						<div><%= link_to channel.title, channel_path(channel) %></div>
					</li>
				<% end %>  
			</ul>
		<% end %>   
	</div>
	<div id="stories">
		<%= link_to image_tag("/images/new_design/rss_16.png"), "/stories/#{@filter}.rss", :class => "rss_button" %>
		<h3 class="display_inline">NOW VIEWING:</h3> 
		<h4 class="display_inline"><%= @filter.gsub("_", " ").gsub("-", " ").titleize %> Stories Inside <%=get_inside_network_text(@network).titleize%></h4>
		<div style="height: 5px; background-color: rgb(204, 204, 204); margin-bottom: 10px;">
			&nbsp;
		</div>
		<% if @news_items.blank? %>
			<div>
				There were no results for your search.  Try different search terms.
			</div>
		<% else %>
			<%= render :partial => @news_items %>
			<%= will_paginate @news_items %>
		<%end%>
	</div>
</div>