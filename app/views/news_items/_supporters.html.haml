.supporters
  %h2.supporters Supporters
  = number_to_currency @tip.total_amount_pledged
  pledged by
  = pluralize(@tip.supporters.count, "person")

.double_content_border

.supporters
  .supporter
    - @tip.supporters.each do |supporter|
      = render :partial => 'news_items/supporter', :locals => {:news_item => @tip, :supporter => supporter}

